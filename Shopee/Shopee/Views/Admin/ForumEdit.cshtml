@{
}
@model ForumModel

<h4 class="text-white">Reply</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="ForumEdit" enctype="multipart/form-data" asp-route-id="@Model.ForumId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ForumSubject" class="control-label text-white">Subject</label>
                <input asp-for="ForumSubject" class="form-control" name="forumSubject" value="@Model.ForumSubject" disabled/>
                <span asp-validation-for="ForumSubject" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ForumBody" class="control-label text-white">Body</label>
                <textarea asp-for="ForumBody" class="form-control" name="forumBody" style="height:150px" value="@Model.ForumBody" readonly></textarea>
                <span asp-validation-for="ForumBody" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input asp-for="NewMessage" class="form-control" name="NewMessage" type="text" placeholder="Message" required/>
                <span asp-validation-for="NewMessage" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}