@{
}
@model ForumModel

<h4 class="text-white">Your forum</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="ForumUpdate" enctype="multipart/form-data" asp-route-forumId="@Model.ForumId" asp-route-userId="@(ViewBag.UserId)" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ForumSubject" class="control-label text-white">Subject</label>
                <input asp-for="ForumSubject" class="form-control" name="forumSubject" value="@Model.ForumSubject" readonly/>
                <span asp-validation-for="ForumSubject" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ForumBody" class="control-label text-white">Chats</label>
                <textarea asp-for="ForumBody" class="form-control" name="forumBody" readonly style="height:150px" value="@Model.ForumBody"></textarea>
                <span asp-validation-for="ForumBody" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input asp-for="NewMessage" class="form-control" name="NewMessage" type="text" placeholder="Message" required/>
                <span asp-validation-for="NewMessage" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-action="Index" asp-route-userId="@(ViewBag.UserId)" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}