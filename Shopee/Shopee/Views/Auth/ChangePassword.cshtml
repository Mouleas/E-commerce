@{
}


<div class="border-5 box">
    <h1>Change password</h1><br />
    <form asp-action="ChangePassword" asp-route-email="@(ViewBag.email)">
        <div class="form-group col-10">
            <label>Email address</label>
            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" value="@(ViewBag.email)" disabled>
        </div><br />
        <div class="form-group col-10">
            <label>OTP</label>
            <input type="text" class="form-control" name="otp" placeholder="Enter Otp">
        </div><br />
        <div class="form-group col-10">
            <label>New password</label>
            <input type="password" class="form-control" name="newpassword" placeholder="Enter new password">
        </div><br />
        @if ("" + ViewData["err"] != "")
        {
            <p class="error-msg">@("" + ViewData["err"])</p>
        }
        <button class="btn btn-primary" type="submit">Submit</button><br /><br />
        <p>Register new? <a asp-action="SignUp">Sign up</a></p>
    </form>
</div>